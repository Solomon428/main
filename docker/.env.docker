# Docker Environment Variables for CreditorFlow

# Database - uses Docker service names
DATABASE_URL="postgresql://creditorflow:creditorflow123@postgres:5432/creditorflow_dev?schema=public"

# Redis
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO
STORAGE_PROVIDER=MINIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=creditorflow-uploads
MINIO_USE_SSL=false

# Auth
JWT_SECRET=creditorflow-jwt-secret-key-min-32-chars-required
NEXTAUTH_SECRET=creditorflow-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# App
NODE_ENV=production
PORT=3000
